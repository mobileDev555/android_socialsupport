<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/default_round_5"
            android:orientation="horizontal" >
            <EditText
                android:id="@+id/search_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:paddingLeft="10dp"
                android:background="@drawable/default_textview"
                android:hint="Search Friends"
                android:textColorHint="@color/blue"
                android:textSize="20sp"
                android:textColor="@color/blue" />
            <ImageView
                android:id="@+id/search_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_search1"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/friend_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar_user" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icn_photo_border"/>
            </FrameLayout>
            <TextView
                android:id="@+id/friend_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:textColor="@color/blue"
                android:text="Ivan Slavtsov"/>
            <ImageView
                android:id="@+id/cancel_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_close_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.hsalf.smilerating.SmileRating
                android:id="@+id/ratingView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                app:isIndicator="false" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:layout_marginTop="10dp"
            android:background="@drawable/default_round_blur"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/pre_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_navigate_before_blue_24dp"/>
                <TextView
                    android:id="@+id/chart_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:text="Daily Checkins\n(current week)"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/colorYellowDark"
                    android:gravity="center"
                    android:textSize="16dp"/>
                <ImageView
                    android:id="@+id/cur_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_sync_black_24dp"/>
            </LinearLayout>
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/mood_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mood Test"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/default_round_gray"/>
            <TextView
                android:id="@+id/online_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Online Help"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/default_round_gray"/>
            <TextView
                android:id="@+id/dass_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="DASS-21 Test"
                android:layout_weight="0.2"
                android:textStyle="bold"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/default_round_gray"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>