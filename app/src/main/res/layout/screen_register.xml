<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:padding="20dp">
                <FrameLayout
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/setup_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/avatar_user" />
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/icn_photo_border"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/default_round_5"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_name1"/>
                    <EditText
                        android:id="@+id/username_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/default_textview"
                        android:hint="Username"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/blue"
                        android:textSize="20sp"
                        android:textColor="@color/blue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/default_round_5"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_name1"/>
                    <EditText
                        android:id="@+id/email_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/default_textview"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/blue"
                        android:textSize="20sp"
                        android:textColor="@color/blue" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/default_round_5"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_key1"/>
                    <EditText
                        android:id="@+id/password_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/default_textview"
                        android:hint="password"
                        android:inputType="textPassword"
                        android:layout_weight="0.2"
                        android:textColorHint="@color/blue"
                        android:textSize="20sp"
                        android:textColor="@color/blue" />
                    <ImageView
                        android:id="@+id/pass_hide"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_eye_hide_w"/>
                    <ImageView
                        android:id="@+id/pass_show"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        android:background="@drawable/icon_eye_show_w"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/default_round_5"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_key1"/>
                    <EditText
                        android:id="@+id/password_edit_conf"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/default_textview"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:layout_weight="0.2"
                        android:textColorHint="@color/blue"
                        android:textSize="20sp"
                        android:textColor="@color/blue" />
                    <ImageView
                        android:id="@+id/pass_hide_conf"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/icon_eye_hide_w"/>
                    <ImageView
                        android:id="@+id/pass_show_conf"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        android:background="@drawable/icon_eye_show_w"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/default_round_5"
                    android:orientation="horizontal" >
                    <RelativeLayout
                        style="@style/SpinnerContainer">
                        <Spinner
                            android:id="@+id/social_spinner"
                            android:popupBackground="@color/white"
                            android:theme="@style/spinnerTheme"
                            style="@style/Spinner" />
                        <ImageView style="@style/SpinnerArrowIcon" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/go_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="I have already account"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/register_but"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/default_round"
                        android:text="Register"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:textSize="18dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <com.hsalf.smilerating.SmileRating
        android:id="@+id/ratingView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        app:isIndicator="false" />
</LinearLayout>